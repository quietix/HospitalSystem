<Page x:Class="CourseWork1.OtherWin6.Page6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork1.OtherWin6"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Page6"
      Background="#FFF4BBBB">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="1" Name="DataGrid1" Margin="0,40,20,80"/>
        <Grid VerticalAlignment="Top" Height="250" Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Content="Оберіть кабінет"/>
            <ComboBox x:Name="CB1_Cabinets" Grid.Row="1" Margin="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" DropDownClosed="CB1_Cabinets_DropDownClosed"/>
        </Grid>
        <Label Content="Лікар(і), що на даний момент працюють у зазначеному&#xD;&#xA;                                       кабінеті" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" VerticalAlignment="Bottom" Margin="0,0,0,5" Grid.Column="1" FontFamily="Comic Sans MS"/>
    </Grid>
</Page>
